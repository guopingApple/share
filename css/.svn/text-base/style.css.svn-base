.invite_bg{background: url(../img/bg_reg.jpg) no-repeat top center;background-size: 100% 100%;}
.bg_hb{width: 88.8%;height: 66%;background: url(../img/bg_hb.png) no-repeat center;background-size: 100% 100%; position: absolute;top: 17%;left:5.6%;}
.txt_lq{position: absolute;bottom: 0; width:100%;}
.btn_lq{position: absolute;bottom: 10%; width:100%;}
.circle_hb{position: absolute;top: 46%; width:100%;}
.inviter{position: absolute;top: 23%; width:100%;}
.inviter dt{width: 19%;margin:0 3% 0 5%;}
.inviter dd{font-size: 1.8em;line-height: 25px;padding-top: 8px;}
.reg_box{width: 85%;height: 52%;position: absolute;top: 24%;left:7.5%;background-color:white;}
.reg_box_top{position: absolute;top:-24%; width:100%;}
.reg_box_user{position: absolute;top: 0; z-index: 99;left: 50%;margin-left: -13%;}
.icon_user{border-radius:50%; -webkit-border-radius:50%; -moz-border-radius:50%;border: solid 3px #ed3d28;}
.reg_box_top_tit{position: absolute;top: 51%; width:100%;z-index: 99;}
.reg_form{height: 47.8%;}
.reg_form ul{padding: 0 4.6%;height: 100%;margin-top: 25%;}
.reg_form ul li{height:33.33%;}
.reg_form ul li div{height: 100%;}
.reg_form ul li input{width: 100%; height: 100%;line-height:100%; vertical-align: middle; font-size: 1.4em;}
.reg_form ul li .img_yz,.reg_form ul li .msg_yz{width: 35%;}
.reg_form ul li .img_yz img{max-height: 100%;max-width: 67%;}
.reg_form ul li .msg_yz .btn_yz{width:100%;height:66.6%;background-color:#b3d465;color: #3e4728;font-size: 1.4em;}
.reg_box .btn_next{height: 12.7%;background-color: #4d90e7;font-size: 1.7em;color: white;margin: 3% 4.6% 1%;}
.reg_box .rule{font-size: 9px;letter-spacing: -1px;}

.pwd_box{width: 85%;height: 23%;position: absolute;top: 4%;left:7.5%;background-color:white;}
.pwd_form{height: 36%;}
.pwd_form ul{padding: 0 4.6%;height: 100%;}
.pwd_form ul li{height:100%;}
.pwd_form ul li div{height: 100%;}
.pwd_form ul li input{width: 100%; height: 100%;line-height:100%; vertical-align: middle; font-size: 1.4em;}
.pwd_tip{color: #48454e;font-size: 1.1em;padding: 5px 4.6%;}
.pwd_box .btn_ok{height: 28%;background-color: #e5160f;font-size: 1.7em;color: white;margin:10px 4.6% 0;}

.invite_succ{width: 70%;position: absolute;top: 11%;left:15%;}
.succ_txt{position: absolute;z-index: 99;top: 60%;width: 100%;text-align: center;}
.succ_txt h3{font-weight: bold;font-size: 2.5em;font-family: "微软雅黑","PingFang";letter-spacing: 1px;}
.compInfo li{padding: 10px 0 10px;}
.compInfo li dl dt{font-size: 13px;}
.posBtn{position: fixed;height: 15%;left: 0;right: 0;bottom: 0;z-index: 99;}
.posBtn.lineTop:before{background-color: #f47539;}
.posBtn .btn_i_want{width: 78%; height: 46%;background-color: #e5160f;margin: 5% auto 2% auto;}

.merchant{height: 30%;background: #4d90e7 url(../img/bg_star.png) no-repeat;background-size:100% auto;position: relative;}
.merchant_date{height: 13.7%;background-color:#3070c4; color: #9ec0ed;position: absolute;bottom: 0;left: 0;right: 0;}
.merchant_con{height: 56%;position: absolute;bottom: 13.7%;left: 0;right: 0;padding:0 7%;}
.merchant_name{height: 30%;color: #bedafe;padding:5% 7% 0;color: #bedafe;}
.mer_icon{border: solid 2px #477bbe;border-radius:50%; -webkit-border-radius:50%; -moz-border-radius:50%;}
.page_merchant_lq .reg_box{top: 30%;width: 100%;left: 0;}
.page_merchant_lq .reg_form ul{margin-top: 0;}
.page_merchant_lq .reg_box .btn_next{background-color: #e5160f;}
.yzm_tip{padding: 0 4.6%;color: #48454e; margin-top: 3%;}
.click_get{height:22px;line-height: 22px; background-color: #f36e2e;}
.alert_black{background-color: rgba(0,0,0,0.8);position: fixed; z-index: 9999;width: 45%;height: 15%; top: 40%;left:27%;}
.lq_succ{ padding: 10px 10%;}
.dhm{letter-spacing: 5px;}
.btn_40{height: 38px;border: solid 1px #c1100a;}
.layer{width: 100%;height: 100%;position: fixed;top: 0;left: 0;background-color: rgba(0,0,0,.5);z-index: 999;}
.alert_white{background-color: rgba(255,255,255,1);position: fixed; z-index: 9999;width: 60%;height: 22%; top: 40%;left:20%;}
.alert_white_top{height: 65%;}
.alert_white_btn{height: 35%;}
.article_details header{position: fixed;top: 0;left: 0;}
.article_details header.lineBottom:after{background-color: #ce5e01;}
.article_details article{padding: 5% 6%;color: #1f1c1c;line-height: 22px;margin-top: 44px;}
.article_details article h1{font-size: 1.6em;line-height: 40px;}
.article_details article p{padding: 8px 0; font-size: 1.4em;}
.pos_icon_circle{width: 9%;position: fixed;top:44px;right: 2%;z-index: 9;margin-top: 4%;}
.pos_icon_btn{width: 32%;position: fixed;bottom:2%;left: 34%;}


.color_yellow{color: #fff75c;}
.color_blue{color: #1829c3;}
.color_red{color: #ed3d28;}
.color_red_tip{color: #e60012;}
.color_000{color: #000;}
.color_black{color: #1f1c1c;}
.color_green{color: #86c020;}
.color_orange{color: #f36e2e;}
.color_red_02{color: #e4007f;}
.color_red_03{color: #e60012;}
.bg_color_red{background-color: #e5160f;}

@media only screen and (max-width:320px ) and (max-device-width:320px ) {
	.inviter dd{font-size: 1.55em;line-height: 20px;}
	.reg_box_top_tit p:first-child{line-height: 20px;}
	.reg_box_top_tit p:last-child{font-size: 12px;}
	.reg_box_top_tit p span.color_yellow{font-size: 25px;}
}
@media only screen and (max-height:480px ) and (max-device-height:480px ) {
	.reg_box{height: 65%;top: 20%;}
	.invite_succ{top: 7%;}
}